{
  // Specify default formatters
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff"
  },
  "[markdown]": {
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true
  },
  // Language config
  "python.languageServer": "Pylance",
  "python.terminal.activateEnvInCurrentTerminal": true,
  "python.testing.pytestArgs": ["tests"],
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,

  "cSpell.words": [
    "addopts",
    "adduser",
    "apuser",
    "archivepodcast",
    "Archiver",
    "boto",
    "botocore",
    "BUILDKIT",
    "colorama",
    "defusedxml",
    "errorcode",
    "errortext",
    "feedburner",
    "filterwarnings",
    "flac",
    "googleplay",
    "inet",
    "lxml",
    "monkeypatches",
    "moto",
    "mycooldomain",
    "mypy",
    "noto",
    "Podbean",
    "Podder",
    "pydocstyle",
    "pydub",
    "pylance",
    "rawvoice",
    "replyall",
    "testpaths",
    "unphased"
  ],
  "livePreview.serverRoot": "htmlcov"
}
